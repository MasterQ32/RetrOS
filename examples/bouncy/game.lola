const ball = LoadData("ball.ico");

Print(ball);

GpuSetBorder(0);
SetGraphicsMode(true);

var x = 56;
var y = 41;


var color = 1;
while(true)
{
  x += JoyGetX();
  y += JoyGetY();

  GpuFillRect(0, 0, 120, 90, 0); 

  GpuDrawRect(20, 20, 40, 25, color);
  color += 1;
  if(color >= 16)
    color = 1;

  GpuScroll(-19,-10);

  GpuBlitBuffer(x, y, 8, ball);

  GpuFlush();
}
