const ball = LoadData("ball.ico");

Print(ball);

GpuSetBorder(0);
SetGraphicsMode(true);
GpuEnableAutoFlush(false);

var x = 56;
var y = 41;


var color = 1;
while(true)
{
  x += JoyGetX();
  y += JoyGetY();

  GpuFillRect(0, 0, 120, 90, 0); 

  GpuDrawRect(50, 35, 20, 20, 0xFF);
  color += 1;
  if(color >= 16)
    color = 1;

  GpuBlitBuffer(x, y, 8, ball);

  GpuFlush();
}
